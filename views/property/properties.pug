extends ../layouts/main-layout.pug

block content
    main
    .content
        .container-fluid
            .row
                .col-lg-12
                    .card-box
                        .row
                            .col-sm-8
                                form(role='form')
                                    .form-group.contact-search.m-b-30
                                        input#search.form-control(type='text' placeholder='Buscar ...')
                                        button.btn.btn-white(type='submit')
                                            i.fa.fa-search
                            .col-sm-4
                                a.btn.btn-default.btn-md.waves-effect.waves-light.m-b-30(href='/add-property' data-animation='fadein' data-overlayspeed='200' data-overlaycolor='#36404a')
                                    i.md.md-add
                                    |  Crear Propiedad
                        .table-responsive   
                        if properties.length > 0                        
                            table.table.table-hover.mails.m-0.table.table-actions-bar
                                thead
                                    tr
                                        th N
                                        th Nick Name
                                        th Direccion
                                        th Cant Cuartos / Departamentos
                                        th Action
                                tbody
                                - let i=1;
                                each property in properties

                                    tr
                                                                         
                                        td #{i++} 
                                        td #{property.adressNickname}
                                        td #{property.adress}
                                        td #{property.aparment.length} 
                                        td
                                            .form-group
                                                form(action='/delete-property' method='POST')
                                                    .button-list
                                                        a.btn.btn-icon.waves-effect.waves-light.btn-primary(href='/edit-property/'+ property._id +'?edit=true')
                                                            i.fa.fa-edit
                                                        button.btn.btn-icon.waves-effect.waves-light.btn-danger
                                                            i.fa.fa-remove
                        else
                              h1 No se tienen propiedades Registradas