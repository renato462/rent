doctype html
html
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(name='description', content='A fully featured admin theme which can be used to build CRM, CMS, etc.')
    meta(name='author', content='Coderthemes')
    link(rel='shortcut icon', href='assets/images/favicon.ico')
    title Ubold - Responsive Admin Dashboard Template
    link(href='../assets/css/bootstrap.min.css', rel='stylesheet', type='text/css')
    link(href='../assets/css/icons.css', rel='stylesheet', type='text/css')
    link(href='../assets/css/style.css', rel='stylesheet', type='text/css')
    script(src='../assets/js/modernizr.min.js')
  body
    .account-pages
    .clearfix
    .wrapper-page
      .card-box
        .panel-heading
          h4.text-center
            | Sign Up to 
            strong.text-custom UBoldclear
        .p-20
          form.form-horizontal.m-t-20(action='/register', method='post')
            .form-group
              .col-12
                input.form-control(type='email', required='', placeholder='Email', name='email')
            .form-group
              .col-12
                input.form-control(type='text', required='', placeholder='Username' name='userName')
            .form-group
              .col-12
                input.form-control(type='password', required='', placeholder='Password' name='password')
            .form-group
              .col-12
                .checkbox.checkbox-primary
                  input#checkbox-signup(type='checkbox', checked='checked')
                  label(for='checkbox-signup')
                    | I accept 
                    a(href='#') Terms and Conditions
            .form-group.text-center.m-t-40
              .col-12
                button.btn.btn-pink.btn-block.text-uppercase.waves-effect.waves-light(type='submit')
                  | Register Renato
            .form-group.m-t-20.m-b-0
              .col-12.text-center
                h5.font-18
                  b Sign Up with
            .form-group.m-b-0.text-center
              .col-12
                button.btn.btn-sm.btn-facebook.waves-effect.waves-light.m-t-20(type='button')
                  i.fa.fa-facebook.m-r-5
                  |  Facebook
                |  
                button.btn.btn-sm.btn-twitter.waves-effect.waves-light.m-t-20(type='button')
                  i.fa.fa-twitter.m-r-5
                  |  Twitter
                |  
                button.btn.btn-sm.btn-googleplus.waves-effect.waves-light.m-t-20(type='button')
                  i.fa.fa-google-plus.m-r-5
                  |  Google+
      .row
        .col-12.text-center
          p
            | Already have account?
            a.text-primary.m-l-5(href='page-login.html')
              b Sign In
    script.
      var resizefunc = [];
